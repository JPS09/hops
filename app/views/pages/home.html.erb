<div class="container">
  <div class="row ">
    <div class="col-12 col-sm-12 col-md-6 col-lg-4">
    <div class="img">
      <%= image_tag 'ray-hennessy-lf6rV2puIS4-unsplash.jpg', width: 1000 %>
      <h1>Hops!.. I did it again!</h1>
    </div>
      <div class="cards">
        <% @beers.each do | beer| %>
          <div class="card">
            <%= cl_image_path beer.photo.key if beer.photo.attached?%>
            <p><%= beer.name %></p>
            <p><%= beer.color.name %></p>
            <p><%= beer.alcohol_strength %></p>
            <p><%= beer.style.name %></p>
            <p><%= beer.brewery.country.name %></p>
          </div>
        <% end %>
      </div>

    </div>
  </div>

</div>
