<div class="beer-card-lg">
  <div>
    <%= image_tag(beer.photo, class: 'beer-photo') rescue image_tag("beer-placeholder-#{Random.new.rand(1..5)}.jpg", class: 'beer-photo') %>
  </div>
  <div class="beer-description-lg">
    <div class="beer-name-alc">
      <div class="beer-name">
        <h4><%= beer.name %></h4>
      </div>
      <div class="beer-alc">
        <h6><%= beer.alcohol_strength %> % </h6>
      </div>
    </div>

    <div class="beer-color-ibu">
      <div class="beer-color">
        <h5><%= beer.color.name %></h5>
      </div>
      <div class="beer-ibu">
        <h6><%= "#{beer.ibu} #{'IBU' if beer.ibu}" %></h6>
      </div>
    </div>

    <div class="beer-style">
      <h5><%= beer.style.name %></h5>
    </div>

    <div class="beer-country">
        <h6><%= beer.brewery.country.name %></h6>
        <div class="beer-icons">
          <ul class="d-flex m-0 p-0">
            <% if @whitelist_ids.include?(beer.id) %>
              <li><%= image_tag("icons/whitelist-black.svg", width: 16, height: 16 ) %></li>
            <% end %>
            <% if @blacklist_ids.include?(beer.id) %>
              <li><%= image_tag("icons/blacklist-black.svg", width: 16, height: 16) %></li>
            <% end %>
            <% if @wishlist_ids.include?(beer.id) %>
              <li><%= image_tag("icons/wishlist-black.svg", width: 16, height: 16) %></li>
            <% end %>
            <% if @customlists_ids.include?(beer.id) %>
              <li><%= image_tag("icons/addlist-black.svg", width: 16, height: 16) %></li>
            <% end %>
          </ul>
        </div>
    </div>

  </div>
</div>
