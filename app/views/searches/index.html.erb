<div>
  <%= form_tag searches_path, id: "search-form", method: :get do %>
    <%= text_field_tag :query, params[:query], id: "search-text" %>
    <%= submit_tag "Search", name: nil %>
  <% end %>
</div>

<br>

<div class="card">
  <% @results.each do |result| %>
    <% res = result.searchable %>
    <% if res.class.name == "Beer" %>
      <div class="beer-card-lg">
        <div>
          <%= image_tag('beer-placeholder', class: 'beer-photo') %>
        </div>
        <div class="beer-description-lg">
          <div class="beer-name-alc">
            <div class="beer-name"> <h4><%= res.name %></h4> 
              <%= image_tag("icons/delete.svg", width: 14, height: 14 ) %>  
            </div>
            <div class="beer-alc"><%= res.alcohol_strength %></div>
          </div>
          <div class="beer-color-ibu">
            <div class="beer-color"> <h5><%= res.color.name %></h5> </div>
            <div class="beer-ibu"><%= res.ibu %></div>
          </div>
          <div class="beer-style"> <h6><%= res.style.name %></h6> </div>
          <div class="beer-country"><%= res.brewery.country.name %></div>
          <div class="beer-brewery-icons">
            <div class="beer-brewery"> <h5><%= res.brewery.name %></h5> </div>
            <div class="beer-icons">
              <ul class="d-flex m-0 p-0">
                <li><%= image_tag("icons/whitelist-black.svg", width: 16, height: 16 ) %></li>
                <li><%= image_tag("icons/blacklist-black.svg", width: 16, height: 16) %></li>
                <li><%= image_tag("icons/wishlist-black.svg", width: 16, height: 16) %></li>
                <li><%= image_tag("icons/addlist-black.svg", width: 16, height: 16) %></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% else %>
     <div>
      Brewery <%= res.name %>
     </div>
    <% end %>
  <% end %>
</div>
