<div class="banner">
  <div class="main-title y-border w-bg">
    <h1><%= link_to "#{@beer.name} - #{@beer.id}", beer_path(@beer) %></h1>
  </div>
</div>

<div class="rounded-white-background">
  <div class="container pt-5">
    <h2><%= "Adding #{@beer.name} to a custom list" %></h2>
    <%= simple_form_for [@beer,@content], html: {class: 'form-inline'} do |f| %>
      <%= f.input :list, collection: @custom_lists %>
      <%= f.button :submit, class: 'btn btn-light' %>
    <% end %>
  </div>
