<div class="banner my-4">
  <div class="navbar">
    <%= link_to image_tag("icons/back-arrow.svg", alt: 'Back', width: 16), url_for(:back) %>
    <%= link_to image_tag("icons/hops-logo.svg", alt: 'Home'), root_path %>
  </div>
</div>
<div class="container">
  <div class="title mx-auto">
    <h2>My cellar / My lists</h2>
  </div>
  <div class="statistics my-4">
    <h2>LISTS</h2>
    <div class="d-flex justify-content-around">
      <div class="text-center">
        <div class="count-icon"><%= image_tag("icons/whitelist-black.svg", alt: 'white', width: 32)%></div>
        <div><%= @white_count %></div>
      </div>
      <div class="text-center">
        <div class="count-icon"><%= image_tag("icons/blacklist-black.svg", alt: 'black', width: 32) %></div>
        <div><%= @black_count %></div>
      </div>
      <div class="text-center">
        <div class="count-icon"><%= image_tag("icons/wishlist-black.svg", alt: 'wish', width: 32) %></div>
        <div><%= @wish_count %></div>
      </div>
      <div class="text-center">
        <div class="count-icon"><%= image_tag("icons/addlist-black.svg", alt: 'add', width: 32) %></div>
        <div><%= @list_count %></div>
      </div>
    </div>
  </div>

  <h2>LISTS v2</h2>
  <div class="d-flex justify-content-around px-5 my-4">
    <%= link_to image_tag('icons/whitelist-black.svg', width: 20, height: 20), list_path(@whitelist), class: "button" %>
    <%= link_to image_tag('icons/blacklist-black.svg', width: 20, height: 20), list_path(@blacklist), class: "button" %>
    <%= link_to image_tag('icons/wishlist-black.svg', width: 20, height: 20), list_path(@wishlist), class: "button" %>
  </div>
  <% @custom_lists.each do |list| %>
    <div class="d-flex align-items-center">
      <%= link_to image_tag('icons/addlist-black.svg', width: 20, height: 20), list_path(list), class: "button disabled" %>
      <%= list.name %>
    </div>
  <% end %>
</div>
