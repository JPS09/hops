<div class= 'banner'>
  <div class=" main-title y-border w-bg">
    <h1><%= @list.name %></h1>
  </div>
</div>
<div class="rounded-white-background ">
  <div class="container pt-5 d-flex justify-content-center align-content-center">
    <div class="cards">
      <% @contents.each do |content| %>
        <div class="d-flex align-items">
          <%= link_to beer_path(content.beer), class: 'beer-card-lg-link' do  %>
            <%= render "shared/beer-cards/beer-card-lg-variable", beer: content.beer %>
          <% end %>
        <%= link_to image_tag('icons/cross-white.svg', width: 10, height: 10), list_content_path(@list, content), method: 'delete', class: "button-sm active", remote: true %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="show-footer">
    <div class="container">
      <h2>!! TEMPORARY ZONE !!</h2>
      <div class="d-flex justify-content-around">
        <div class="list-card">
          <%= link_to image_tag('icons/beer-add.svg', width: 20, height: 20), searches_path %>
          <div>ADD BEER</div>
        </div>
      </div>
      <div>
        <%= simple_form_for [@list, @content] do  |f| %>
          <%= f.input :beer_id%>
          <%= f.button :submit, 'Add this beer', :class => 'form-btn' %>
        <% end %>
      </div>
    </div>
    </div>
</div>






