<div class="container">
  <div class="banner my-4">
    <div class="navbar">
      <%= link_to image_tag("icons/back-arrow.svg", alt: 'Back', width: 16), url_for(:back) %>
      <%= link_to image_tag("icons/hops-logo.svg", alt: 'Home'), root_path %>
    </div>
    <div class="title">
      <%= "#{@beer.name} - #{@beer.id}" %>
    </div>
  </div>
  <div class="d-flex justify-content-around px-5 my-4">
    <div><%= link_to render('shared/buttons/whitelist', whitelist: @whitelist, beer: @beer, content: @content), '#' %></div>
    <div><%= link_to render('shared/buttons/blacklist', blacklist: @blacklist, beer: @beer, content: @content), '#' %></div>
    <div><%= link_to render('shared/buttons/wishlist', wishlist: @wishlist, beer: @beer, content: @content), '#' %></div>
    <div>
      <% if current_user.lists.count > 3 %>
        <%= render 'shared/buttons/addlist', beer: @beer %>
      <% end %>
    </div>
  </div>
  <div class="notes my-4">
    <% if @beer_user_review.nil?%>
    <h2>NOTES - No personal notes</h2>
      <%= simple_form_for ([@beer, @review]), class: 'd-flex' do |f| %>
        <%= f.input :comment, input_html: { rows: 1 }, placeholder: 'Drop a comment', label: false%>
        <%= f.input :rate, input_html: { min: 0 }, placeholder: 'Rate !', label: false, class: 'w-25' %>
        <%= f.submit 'Add review', class: 'btn btn-light', id: 'review_submit' %>
      <% end %>
    <% else %>
      <div class="d-flex justify-content-between">
        <h2>NOTES</h2>
        <%=link_to image_tag("icons/edit.svg", alt: 'edit', width: 32), edit_beer_review_path(@beer, @review) %>
        <div>
          <%=image_tag("icons/rating.svg", alt: 'rate', width: 16) * @review.rate %>
          <%= image_tag("icons/delete.svg", alt: 'no-rate', width: 16, class: 'transparent') * (5 - @review.rate) %>
        </div>
      </div>
      <%= "#{@beer_user_review.id}. #{@beer_user_review.comment}" %>
    <% end %>
  </div>
  <div class="info my-4">
    <h2>INFO</h2>
      <div class="d-flex flex-wrap">
        <% if @beer.color %>
          <div class="tag-color text-center">
            <div><%= link_to image_tag("icons/rating.svg", alt: 'rate', width: 32), "/search?query=#{@beer.color.name}" %></div>
            <%= @beer.color.name %>
          </div>
        <% end %>

        <% if @beer.style.name %>
          <div class="tag-style text-center">
            <div><%=image_tag("icons/rating.svg", alt: 'rate', width: 32) %></div>
            <%= @beer.style.name %>
          </div>
         <% end %>

        <% if @beer.alcohol_strength %>
          <div class="tag-alcohol text-center">
            <div><%=image_tag("icons/rating.svg", alt: 'rate', width: 32) %></div>
            <%= @beer.alcohol_strength %>
          </div>
        <% end %>

        <% if @beer.ibu %>
          <div class="tag-ibu text-center">
            <div><%=image_tag("icons/rating.svg", alt: 'rate', width: 32) %></div>
            <%= @beer.ibu %>
          </div>
        <% end %>

        <% if @beer.brewery.name %>
          <div class="tag-brewery text-center">
            <div><%=image_tag("icons/rating.svg", alt: 'rate', width: 32) %></div>
            <%= @beer.brewery.name %>
          </div>
        <% end %>

        <% if @beer.brewery.country.name %>
          <div class="tag-country text-center">
            <div><%=image_tag("icons/rating.svg", alt: 'rate', width: 32) %></div>
            <%= @beer.brewery.country.name %>
          </div>
        <% end %>

        <% if true %>
          <div class="tag-city text-center">
            <div><%=image_tag("icons/rating.svg", alt: 'rate', width: 32) %></div>
            <%= "City" %>
          </div>
        <% end %>
      </div>
      <%= @beer.description %>
  </div>
  <div class="statistics my-4">
    <h2>STATISTICS</h2>
    <div class="d-flex justify-content-around">
      <div class="text-center">
        <div class="count-icon"><%= image_tag("icons/whitelist-black.svg", alt: 'white', width: 32)%></div>
        <div><%= @white_count %></div>
      </div>
      <div class="text-center">
        <div class="count-icon"><%= image_tag("icons/blacklist-black.svg", alt: 'black', width: 32) %></div>
        <div><%= @black_count %></div>
      </div>
      <div class="text-center">
        <div class="count-icon"><%= image_tag("icons/wishlist-black.svg", alt: 'wish', width: 32) %></div>
        <div><%= @wish_count %></div>
      </div>
      <div class="text-center">
        <div class="count-icon"><%= image_tag("icons/addlist-black.svg", alt: 'add', width: 32) %></div>
        <div><%= @list_count %></div>
      </div>
    </div>
  </div>
</div>
